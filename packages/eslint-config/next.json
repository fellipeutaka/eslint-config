{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": ["./react", "plugin:@next/next/recommended"],
  "plugins": ["jsx-a11y"],
  "overrides": [
    {
      "files": [
        "pages/.{js,jsx,tsx}",
        "src/pages/.{js,jsx,tsx}",
        "app/**/{page,layout,template,loading,error,not-found}.{js,jsx,tsx}",
        "src/app/**/{page,layout,template,loading,error,not-found}.{js,jsx,tsx}"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ],
  "ignorePatterns": [".next"]
}
